mixin c-card(className, name, price, sign)
  .c-card(class=className)
    .c-card__icons 
      block
    .c-card__title
      .c-card__title__name=name
      .c-card__title__price=price
        .c-card__title__price__sign=sign


mixin c-addButton(className)
  .c-addButton__additionalGroup(class=className)
    .c-addButton__addFood
      +b-iconLabel('b-iconLabel', 'Первое') 
        include ../../assets/icons/Decorations/Soup.svg
      +b-addButton('b-addButton firstСourse')
    .c-addButton__addFood.--brown
      +b-iconLabel('b-iconLabel ', 'Второе') 
        include ../../assets/icons/Decorations/Steak-1.svg
      +b-addButton('b-addButton secondСourse')
    .c-addButton__addFood.--green
      +b-iconLabel('b-iconLabel', 'Салат') 
        include ../../assets/icons/Decorations/Salad.svg
      +b-addButton('b-addButton saladCourse')
