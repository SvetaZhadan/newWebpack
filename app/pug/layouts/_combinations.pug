    .c-check__check-popup Добавьте блюда в заказ

mixin c-foodCard
  template.cardTemplate
    .c-foodCard
      .c-foodCard__wrap
        img.img(src='' alt='')
        .c-foodCard__container
          .c-foodCard__name.name
          .c-foodCard__weight.weight
      .c-foodCard__btnAdd Добавить

mixin c-accordeonSection(question, answer, className)
  .c-accordeonSection
    .c-accordeonSection__question=question
      +b-morph
    .c-accordeonSection__answer=answer

mixin c-sending(className, title, text)
  .c-sending(class=className)
    block 
    .c-sending__title=title
    .c-sending__text=text



